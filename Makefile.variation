variation-header:
	@echo -e "\nMakefile.variation options"
	@echo "============================"

vcftools-header:
	@echo -e "\nvcftools options"
	@echo "--------------------"

annovar-header:
	@echo -e "\nannovar options"
	@echo "--------------------"

